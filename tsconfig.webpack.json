{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "allowJs": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "paths": {
      "*": ["node_modules/*"]
    },
    "types": ["node"]
  },
  "exclude": [
    "view",
    ".webpack",
    "node_modules"
  ]
}
