{
  "name": "electron-app",
  "productName": "electron-app",
  "private": true,
  "version": "1.0.0",
  "description": "Validation app",
  "main": ".webpack/electron/index.bundle.js",
  "author": {
    "name": "andresmestra"
  },
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run vite:dev\"  \" npm run electron:dev\"",
    "build": "npm run vite:build  && npm run electron:build",
    "package": "npm run build && npm run electron:package",
    "make": "npm run build && npm run electron:make",
    "lint": "eslint --ext .ts,.tsx .",
    "vite:dev": "vite --mode development",
    "vite:build": "vite build --mode production",
    "electron:dev": "npm run electron:build:dev && npm run electron:start",
    "electron:start": "env-cmd -e dev electron-forge start",
    "electron:build": "env-cmd -e production webpack --config webpack.main.config.js",
    "electron:build:dev": "env-cmd -e dev webpack --config webpack.main.config.js",
    "electron:build:test": "env-cmd -e test webpack --config webpack.main.config.js",
    "electron:package": "env-cmd -e production electron-forge package",
    "electron:make": "env-cmd -e production electron-forge make",
    "electron:rebuild": "electron-rebuild"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "@electron-forge/plugin-auto-unpack-natives": "^6.0.0-beta.63",
    "@types/react": "^17.0.33",
    "@types/react-dom": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "@vercel/webpack-asset-relocator-loader": "^1.7.2",
    "@vitejs/plugin-react": "^1.0.7",
    "concurrently": "^7.0.0",
    "dotenv-webpack": "^7.1.0",
    "electron": "18.0.3",
    "electron-devtools-installer": "^3.2.0",
    "env-cmd": "^10.1.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "node-loader": "^2.0.0",
    "prettier": "^2.5.1",
    "ts-loader": "^9.2.8",
    "typescript": "^4.6.3",
    "vite": "^2.9.4",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2"
  }
}
